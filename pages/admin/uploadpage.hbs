    <div id="container" class="container-fluid px-m-3 px-0 d-flex flex-column justify-content-center align-items-center pt-2 bg-success-subtle h-100">
        <h1 class="text-decoration-underline">Blog Content Upload</h1>
        <form action="/admin/createblog" method="post" enctype="multipart/form-data">
            <label for=""> Title:</label><br>
            <input type="text" name="title" id="title" class="w-100" required placeholder="Title of your content"><br>
    
            <label for="">Content:</label><br>
            <textarea name="content" id="content" cols="30" rows="10" class="w-100" required placeholder="type your content...."></textarea><br>
            
            <label for="">Image:</label><br>
            <input type="file" name="images" multiple accept="image/*" id="imageInput" onchange="showimages()" required><br><br>
            <div id="imagePreview"></div>
            <button type="submit" id="upload" class="w-50 my-3">Upload...</button>
        </form>
    </div>
 
    <script src="/admin/upload.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
